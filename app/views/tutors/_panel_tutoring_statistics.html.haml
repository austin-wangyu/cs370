%div.font-weight-light{id:"panel-tutoring-statistics"}
  .lead.card-title.text-center.mb-0 Your Statistics
  %hr.my-1
  .row
    .col-9.text-right
      Total Hours Tutored:
    .col-3.pl-0
      = @my_hours_total
  .row
    .col-9.text-right
      Hours In Last 7 Days:
    .col-3.pl-0
      = @my_hours_week
  - @questions&.each do |question|
    .row
      .col-8.text-right
        = question[0].descriptor
        \:
      .col-4.pl-0
        = question[1].nil? ? 'TBD' : question[1]
        \/
        = question[0].max_scale_value

  .lead.card-title.text-center.mb-0.mt-4 CS370 Statistics
  %hr.my-1
  .row
    .col-9.text-right
      Total Hours Tutored:
    .col-3.pl-0
      = @class_hours_total
  .row
    .col-9.text-right
      Hours In Last 7 Days:
    .col-3.pl-0
      = @class_hours_week
