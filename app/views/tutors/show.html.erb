<%= stylesheet_link_tag "tutors" %>
<%= stylesheet_link_tag "dataTables.bootstrap4.min.css" %>

<% if alert %>
  <%= render "notice_danger" %>
<% end %>

<% if notice %>
  <%= render "notice_success" %>
<% end %>

<div style=" " class="container emp-profile">
    <div>
        <a class="glyphicon glyphicon-off" id:"sign_out" data-method="delete" href=<%= destroy_tutor_session_path %>></a>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <%= image_tag("user.svg") %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5 style="padding-top: 16px; font-size: 30px;">
                    <%= @tutor.first_name %> <%= @tutor.last_name%>
                </h5>
                <h6 style="margin-bottom: 20px;">
                    <%=@tutor.type_of_tutor%>
                </h6>
                <div >
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="" data-toggle="tab" role="tab" href="#"aria-controls="home" aria-selected="true">Meetings</a>
                        </li>
                    </ul>
                    <ul class="meetings" id="meetings">
                      <% if @meetings.length == 0 %>
                        <li style="padding-top: 16px;"> No scheduled meetings</li>
                      <% else %>
                        <% @meetings.each do |meeting| %>
                          <li style="padding-top: 16px;">
                            <%tutee = Tutee.find_by_id(meeting.tutee_id)%>
                            <div>Name: <%=tutee.first_name + " " + tutee.last_name%> </div>
                            <div>Time: <%=meeting.set_time ? (meeting.set_time.strftime("%A, %b %d at %l:%M %p")) : "Pending Confirmation"%> </div>

                            <div>Location: <%=meeting.set_location ? (meeting.set_location.titleize) : "Pending Confirmation"%> </div>
                            <div>Contact at: <%=tutee.email%> </div>
                            <% if meeting.set_time %>
                                <%= link_to '◾️ Finish Meeting', meetings_done_path(@tutor.id, meeting.id), method: :post, data: {confirm: "Warning! You are finishing a meeting, the action cannot be undone."}%>                                
                            <% else %>
                                <div class="font-weight-bold">Please enter meeting details below.</div>
                                <a class="btn-link" data-toggle="collapse" href="#meetingDetails" role="button" aria-expanded="false" aria-controls="meetingDetails">
                                    ◾️ Enter Meeting Details
                                </a>
                            <% end %>  
                            <%= link_to '◾️ Delete Meeting', tutor_delete_meeting_path(@tutor.id, meeting.id), method: :delete, data: {confirm: "Warning! You are deleting a meeting, the action cannot be undone."}%>                         
                            <div class="collapse" id="meetingDetails">
                                <form id="email-form" action=<%= tutor_confirm_meeting_path(@tutor) %> method="post">
                                    <div>
                                        <h1 id="to-email"></h1>
                                        <input id="student-id" name="student[id]" type="hidden" value="">
                                        <input id="tutee-id" name="tutee_id" type="hidden" value="">
                                        <input id="student-email" name="student[email]" type="hidden" value="">
                                        <input id="meeting-id" name="meeting_id" type="hidden" value='<%= meeting.id %>'>
                                        <input id="request-id" name="student[requestid]" type="hidden" value="">
                                        <p id="meeting-length"></p>
                                        <div class="container1" id="container123">
                                            <div id="1">
                                                <input name="Date" id="Date" type="date" placeholder="Select Date" required>
                                                <input name="Time" id="Time" type="time" placeholder="HH:MM am/pm" required>
                                                <input name="Location" id="Location" type="text" placeholder="Location" required>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary mt-1 mr-1" type="reset">Reset</button>
                                        <input class="btn btn-primary ml-1 mt-1" type="submit" value="Submit">
                                    </div>
                                </form>
                            </div>
                          </li>
                        <% end %>
                      <% end %>
                    </ul>
                </div>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Hours</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
        	<form action=<%= edit_tutor_path(@tutor) %> method="GET">
            	<input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
        	</form>
            <%= link_to '<button style="margin-top: 10px; margin-left: -52px" class="profile-new-stud-btn" type="button">Find Student!</button>'.html_safe, tutor_find_students_path(@tutor) %>
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="profile-work">
                <p>Preferred Classes</p>
                <% @true_classes.each do |berkeley_class| %>
                <div class="value" >
                    <label> <%= berkeley_class %> </label>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" style="padding: 0 20px 20px 20px;">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.email%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Current Academic Term</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.term%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Gender</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.gender%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>SID</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.sid%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Major</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.major%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Are you a DSP student?</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.dsp? ? "Yes" : "No" %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Are you a transfer student?</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @tutor.transfer? ? "Yes" : "No" %></p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Current Total Hours</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= total_hours %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Average Hours/Week</label>
                        </div>
                        <div class="col-md-6">
                          <p><%= average_hours %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Hours this week</label>
                        </div>
                        <div class="col-md-6">
                          <p><%= hours_this_week %></p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                    <div class="row">
                        <div style="margin-left: 32px; font-size: 22px;">
                            <label>Coming Soon!</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
