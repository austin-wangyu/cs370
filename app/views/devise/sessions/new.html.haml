= render 'application/notice'
%body.container.landing_background
  .row.h-100.justify-content-center.align-items-center
    .col-8.text-center.text-white
      .display-4.pb-4 Welcome to CS370 Demo
      .card.p-4
        .h6.text-left.font-weight-normal{id:'form_information'}
          .text-danger
            Welcome to the demo site!
            %br
            Get familiar with the interface by logging in with tutor@berkeley.edu or tutee@berkeley.edu and password 111111
            %br
            Please send any bug reports or feature suggestions to wangyu.austin@berkeley.edu, thanks!
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-group
              = f.label :email, class: 'text-info'
              %br/
              = f.email_field :email, autofocus: true, class: 'form-control', id: 'username', autocomplete: "email", :placeholder => 'e.g. name@berkeley.edu', :pattern => "[a-z0-9._%+-]+@berkeley.edu",
             :oninput => "this.setCustomValidity('')", :oninvalid => "this.setCustomValidity('Enter berkeley email only')"
            .form-group
              = f.label :password, class: 'text-info'
              %br/
              = f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password'
            .form-row.align-items-center
              .col-3
                = f.submit "Log in", class: 'btn btn-info btn-md'
              .col-9
                #register-link.text-right
                  = render "devise/shared/links"
