%ul.list-group
  %li.list-group-item{sort:false}
    .mb-2= text_field_tag "mandatory_course_prompt", "[CANNOT BE CHANGED] What class did you receive tutoring for?", class:'form-control', disabled:true
    .form-row
      .col-auto.pl-4.pr-3
        .form-row
          %p.mb-1.text-muted
            What type of question is this?
        .form-row.pb-1
          .col-7.pl-0.pr-0
            = select_tag "mandatory_course_is_optional", options_for_select([['Mandatory'], 'Mandatory']), class:'form-control form-control-sm', disabled:true
          .col.pl-1.pr-0
            = select_tag "mandatory_course_question_type", options_for_select(['Dropdown'], 'Dropdown'), class:'form-control form-control-sm', disabled:true
        .form-row
          .col-7.pl-0.pr-0
            = select_tag "mandatory_course_is_admin_only", options_for_select(['Visible to Admin Only'], 'Visible to Admin Only'), class:'form-control form-control-sm', disabled:true
          .col.pl-1.pr-0
            = select_tag "mandatory_course_is_active", options_for_select(['Enabled'],'Enabled'), class:'form-control form-control-sm', disabled:true
      .col-auto.my-auto
        .form-row
          %p.mb-1.text-muted.custom_small
            Options (one per line):
          = text_area_tag "mandatory_course_details_options", 'See Courses Tab for listings', class: 'form-control form-control-sm custom_small', required:'true', disabled:true

  %li.list-group-item{sort:false}
    .mb-2= text_field_tag "mandatory_hours_prompt", "[CANNOT BE CHANGED] How many hours of tutoring did you receive?", class:'form-control', disabled:true
    .form-row
      .col-auto.pl-4.pr-3
        .form-row
          %p.mb-1.text-muted
            What type of question is this?
        .form-row.pb-1
          .col-7.pl-0.pr-0
            = select_tag "mandatory_hours_is_optional", options_for_select([['Mandatory'], 'Mandatory']), class:'form-control form-control-sm', disabled:true
          .col.pl-1.pr-0
            = select_tag "mandatory_hours_question_type", options_for_select(['Dropdown'], 'Dropdown'), class:'form-control form-control-sm', disabled:true
        .form-row
          .col-7.pl-0.pr-0
            = select_tag "mandatory_hours_is_admin_only", options_for_select(['Visible to Tutor','Visible to Admin Only'], 'Visible to Tutor'), class:'form-control form-control-sm', disabled:true
          .col.pl-1.pr-0
            = select_tag "mandatory_hours_is_active", options_for_select(['Enabled'],'Enabled'), class:'form-control form-control-sm', disabled:true
      .col-auto.my-auto
        .form-row
          %p.mb-1.text-muted.custom_small
            Options (one per line):
          = text_area_tag "mandatory_hours_details_options", "0.5\n1.0\n1.5\n2.0\nOther (write in)", class: 'form-control form-control-sm custom_small', rows:5, required:'true', disabled:true
