%body.container.landing_background
  .row.h-100.justify-content-center.align-items-center
    .col-6
      .card.p-4
        = form_tag admin_session_path, method: 'post', class: 'form', id: 'login-form' do
          .h3.text-center.text-info Admin Login
          .form-group
            = @logged_in
            = label :password, "password", class: 'text-info'
            = password_field_tag :password,'', :placeholder => 'password', class: 'form-control', id:'password'
          = submit_tag 'Log in', class: 'btn btn-info btn-md'
