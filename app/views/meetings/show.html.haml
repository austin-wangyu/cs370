.container-fluid
  %ol.breadcrumb
    %li.breadcrumb-item
      %a{:href => '#'} Meeting
    %li.breadcrumb-item.active Overview

  .card.mb-3
    .card-header
      %span.glyphicon.glyphicon-time
      Select a Time
    .card-body
      -if @meeting.nil?
        .card-header
          You have no scheduled meetings.
      -elsif not @meeting.set_time.nil?
        .card.mb-3
          .card-header
            %span.glyphicon.glyphicon-map-marker
            Your Next Meeting Info
          .card-body
            %h5 Time & Date:
            #{@meeting.set_time.strftime("%A %d at %l:%M %p")}
          .card-body
            %h5 Location:
            #{@meeting.set_location.titleize}
          .card-body
            %h5 Class:
            #{@req.last.course.name}
          .card-body
            %h5 Tutor:
            #{@tutor.first_name + " " + @tutor.last_name}
          .card-body
            %h5 Tutor Email:
            #{@tutor.email}
      -else
        - if flash[:message]
          .alert.alert-danger
            %span.error= flash[:message]
        = form_tag tutee_create_meeting_path(:tutee_id => params[:tutee_id]), class: 'container-fluid' do
          .form-row
            .form-group.col-md-4
              Please pick a time:
              = select :meeting, :set_time, options_for_select(@dates), class: 'form-control'

          = submit_tag 'Schedule Meeting', :id=>'setup_meeting', class: 'btn btn-primary'
        .card-body
          = form_tag tutee_delete_meeting_path(:tutee_id => params[:tutee_id], :id =>  1),:method => :delete, class: 'container-fluid' do
            .form-row
              .form-group.col-md-6
                If none of these times work you can cancel this meeting and wait to match with another tutor
            = submit_tag 'Cancel Meeting', :id=>'cancel_meeting', class: 'btn btn-secondary'
